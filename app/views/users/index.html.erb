<body class="root-page">
  <% if user_signed_in? %>
    <%= render '/nav' %>
  <% end %>

  <!-- slide 1 -->
  <div id="landingpageheader">
    <div id="parallaxbg"></div>
    <!-- <div id="fullwidth">
      <img src=<%= asset_path "dollar-bills.png"%> id="dollars">
    </div> -->
    <div id="logo">
      <h2 id="sitetitle">Five For Today</h2>
      <h5 id="descriptor">Give $5 to One Non-profit with just a click, as many times as you want</h5>
    </div>

    <div class="link-container">
      <% if !user_signed_in? %> 
        
          <%= link_to "Sign Up", new_user_registration_path, id: "signup" %>
        
          <%= link_to "Sign In", new_user_session_path, id: "signin" %> 
      <% end %>
    </div>
  </div>

  <!-- <div class="spacer"></div> -->

  <!-- slide 2 -->
  <div class="aboutdiv" id="scenetwo">
  <div id="parallaxbg2"></div>
  <div id="aboutcontainer">
    <h4 class="nomargins" id="abouttext">By curating a list of nonprofits, based specifically on your personal interests, <span class="lobster" id="aboutlogo">Five For Today</span> aims to make giving to a nonprofit you believe in, as easy as pressing a button. And hey, its just a dollar!</h4>
  </div>
  </div>

  <!-- <div class="spacer"></div> -->


  <!-- slide 3 -->
  <div id="scenethree">
    <h2 id="contactinfo"><a id="linkcolor" href="mailto:bellamysmith1@gmail.com">Have Questions? Contact Us!</a></h2>
  </div>




<script>
  var controller = new ScrollMagic();
  // parallax
  // new ScrollScene({
  //     triggerElement: "#landingpageheader",
  //     // speed of items pinned on parallax bg
  //     duration: $(window).height() + 150,
  //     offset: -150
  //   })
  //   .addTo(controller)
  //   .triggerHook("onCenter")
  //   .setTween(new TimelineMax().add([
  //     TweenMax.fromTo("#logo", 1, {scale: 1, alpha: 1, top: "80%"}, {top: "0%", ease: Linear.easeNone}),
  //     TweenMax.to("#parallaxbg", 1, {backgroundPosition: "0 -260%", ease: Linear.easeNone})
  //   ]));

  // parallax
  new ScrollScene({
    triggerElement: "#scenetwo",
    duration: $(window).height() + 150,
    offset: -150 
  })
  .addTo(controller)
    .triggerHook("onCenter")
    .setTween(new TimelineMax().add([
      // first top refers to the center point
      TweenMax.fromTo("#aboutcontainer", 1, {scale: 1, alpha: 1, top: "60%"}, {top: "-10%", ease: Linear.easeNone}),
      TweenMax.to("#parallaxbg2", 1, {backgroundPosition: "0 -260%", ease: Linear.easeNone})
    ]));
  




  var sceneOptions = {duration: 300, offset: -300};
  var element = $("#contactinfo");

  // fade
  new ScrollScene(sceneOptions)
    .addTo(controller)
    .triggerHook("onCenter")
    .triggerElement(element)
    .setTween(TweenMax.from(element, 1, {autoAlpha: 0}));
        
</script>



</body>
