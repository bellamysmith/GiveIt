      <%= render '/nav' %>
    <% end %>
<header class="user-show-header">

	<h2> This is your dashboard where you can view your giving history, change account information, and update your interests list</h2>
</header>


<div class="user-topics large-7 columns">
	<h3> Your Topics</h3>
	<%= form_for @user do |u| %>
		<% @user.topics.each do |a| %>
		<%= u.submit a.topic, class: "button"%> 
		<% end %>
	<% end %>
	<a><%= link_to "Add Topics", edit_user_path(@user) %></a>
</div>

<div class="user-donations large-4 columns">
	<h3>YOUR DONATIONS:</h3>
	<%= @user.donations.count %>
</div>


<div class="large-12 columns">
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</div>


